@model DotNetFormApp.Models.FormData

<form asp-action="SubmitForm" enctype="multipart/form-data" method="post">
    <div>
        <label>Name:</label>
        <input type="text" asp-for="Name" required />
    </div>

    <div>
        <label>Email:</label>
        <input type="email" asp-for="Email" required />
    </div>

    <div>
        <label>Address:</label>
        <input type="text" asp-for="Address" />
    </div>

    <div>
        <label>Image:</label>
        <input type="file" name="Image" accept="image/*" />
    </div>

    <button type="submit">Submit</button>
</form>
